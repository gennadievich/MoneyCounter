<%= form_tag users_path do%>
    <%= text_field_tag "user[email]", nil, class: 'form-control width-50', id: 'reg-email-field', placeholder: 'Email', type: 'email'  %>
    <br>
    <%= text_field_tag "user[password]", nil, placeholder: 'Password', class: 'form-control width-50', id: 'reg-password-field', type: 'password'  %>
    <br>
    <%= text_field_tag "user[password_confirmation]", nil, placeholder: 'Confirm password', class: 'form-control width-50', id: 'reg-confirm-password-field', type: 'password'  %>
    <br>
    <%= submit_tag 'Register!', class: 'btn btn-default', id: 'register-btn' %>

<% end %>