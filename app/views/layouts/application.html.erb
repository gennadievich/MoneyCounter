<!DOCTYPE html>
<html>
<head>
  <title>MoneyCounter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body style="
    text-align: center;
    font-family: Arial;
    width: 720px;
    margin: auto;
    border: dashed 1px green;
    padding-top: 10px;
    padding-bottom: 10px;
">

<div class="menu">
  <%= link_to 'Home', root_path %>
  <%= link_to 'Login', login_path unless current_user%>
  <%= link_to current_user.email, user_path(current_user) if current_user %>
  <%= link_to 'Logout', logout_path if current_user%>
  <%= link_to 'Register', new_user_path unless current_user%>
</div>


<%= yield %>

</body>
</html>
