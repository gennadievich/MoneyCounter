<%= form_tag login_path do%>
    <%= email_field_tag :email, nil, placeholder: 'Email', class: 'form-control width-50', id: 'email-field' %>
    <br>
    <%= password_field_tag :password, nil, placeholder: 'Password', class: 'form-control width-50', id: 'password-field' %>
    <br>
    <%= submit_tag 'Sign in', class: 'btn btn-default', id: 'login-btn' %>
<% end %>