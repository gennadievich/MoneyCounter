<div class="form-group">
  <%= form_for @user do |f|%>
      <%= f.password_field :password, placeholder: 'New password', class: 'form-control width-50'  %>
      <br>
      <%= f.password_field :password_confirmation, placeholder: 'Confirm password', class: 'form-control width-50'  %>
      <br>
      <%= f.submit 'Change password', class: 'btn btn-default' %>

  <% end %>
</div>