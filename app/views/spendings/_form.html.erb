<%= form_for :spending do |f|%>
    <%= f.label :date %>
    <%= f.date_field :date, value: Time.now.strftime('%Y-%m-%d') %>
    <%= f.label :sum %>
    <%= f.number_field :sum %>
    <%= f.label :category %>
    <%= f.text_field :category %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.submit 'Add Spending' %>
<% end %>