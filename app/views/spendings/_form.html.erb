<%= form_for :spending do |f|%>

    <%= f.date_field :date, value: Time.now.strftime('%Y-%m-%d'), class: 'field' %>
    <br>

    <%= f.number_field :sum, placeholder: 'Sum', class: 'field' %>
    <br>

    <%= f.text_field :category, placeholder: 'Category', class: 'field' %>
    <br>

    <%= f.text_field :description, placeholder: 'Description', class: 'field' %>
    <br>
    <br>
    <%= f.submit 'Add Spending', class: 'button' %>
<% end %>