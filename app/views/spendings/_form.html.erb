<%= form_for [current_user, @spending] do |f|%>

    <%= f.date_field :date, value: Time.now.strftime('%Y-%m-%d'), class: 'form-control width-50' %>
    <br>

    <%= f.number_field :sum, placeholder: 'Sum', class: 'form-control width-50' %>
    <br>

    <%= f.text_field :category, placeholder: 'Category', class: 'form-control width-50' %>
    <br>

    <%= f.text_field :description, placeholder: 'Description', class: 'form-control width-50' %>
    <br>
    <br>
    <%= f.submit nil, class: 'btn btn-warning' %>
<% end %>