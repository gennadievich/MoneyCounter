<table>
  <tr>
    <th>Date</th>
    <th>Category</th>
    <th>Sum</th>
    <th>Description</th>
    <th>X</th>
    <th>E</th>
  </tr>

  <tr>
    <td><%= @spending.date %></td>
    <td><%= @spending.category %></td>
    <td><%= number_with_delimiter(@spending.sum) %></td>
    <td><%= @spending.description %></td>
    <td><%= link_to 'X', delete_spending_path(params[:user_id], params[:id]), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    <td><%= link_to 'E', edit_user_spending_path(@spending.user, @spending.id) %></td>
  </tr>
</table>
